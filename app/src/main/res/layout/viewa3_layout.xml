<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elizabethwhitebaker.choicancerpainapp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Medical Conditions"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="138dp"
        android:layout_height="33dp"
        android:text="Kidney Disease"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText6"
        app:layout_constraintRight_toLeftOf="@+id/checkBox10"
        android:layout_marginRight="16dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="137dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="Liver Disease"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="137dp"
        android:layout_height="31dp"
        android:text="Heart Disease"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:text="Respiratory Disease"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="137dp"
        android:layout_height="32dp"
        android:text="Other"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox4"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/checkBox4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox4"
        app:layout_constraintHorizontal_bias="1.0" />

    <CheckBox
        android:id="@+id/checkBox10"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:text="Neurologic Disease"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox"
        android:layout_marginRight="23dp"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/checkBox11"
        android:layout_width="169dp"
        android:layout_height="35dp"
        android:text="Gastrointestinal Disease"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox2" />

    <CheckBox
        android:id="@+id/checkBox12"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Non-Hodgkin Lymphoma"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/checkBox11"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox11"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox11" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="166dp"
        android:layout_height="124dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="34dp"
        app:layout_constraintLeft_toRightOf="@+id/checkBox9"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox12" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="234dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Do you have other medical conditions?"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</android.support.constraint.ConstraintLayout>
